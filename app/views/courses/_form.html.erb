<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :coding_class_id, "Coding class", style: "display: block" %>
    <%= form.collection_select :coding_class_id, @coding_classes, :id, :title, { prompt: 'Select a course' } %>
  </div>

  <div>
    <%= form.label :trimester_id, "Trimester", style: "display: block" %>
    <%= form.collection_select :trimester_id, @trimesters, :id, :display_name, { prompt: 'Select a trimester' } %>
  </div>

  <div>
    <%= form.label :max_enrollment, style: "display: block" %>
    <%= form.number_field :max_enrollment %>
  </div>

  <div>
    <%= form.submit "Create Course" %>
  </div>
<% end %>
